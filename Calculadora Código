#include <iostream>
//Backup 5
// Função Adição
float soma(float a, float b){
    return a+b; }

// Calculo Subtração
float subtracao(float a, float b){
    return a-b; }
    
// Função Multiplicação
float multiplicacao(float a, float b){
    return a*b; }

// Calculo Divisão
float divisao(float a, float b){
    return a/b; }
    
// Calculo Porcentagem
float porcentagem(float a, float b){
    return a/100*b; }

// Calculo Fatoração
float fatoracao(float a){
    float result = 1;
    for (int i=a; i > 0; i--){
        result *= i; }
        
    return result; }
    
// Calculo Cosseno ATENÇÂO
float cosseno(float b){
    return 1; }
    
// Calculo tanegente ATENÇÂO
float tangente(float b){
    return 1; }
    
// Calculo Potência
float potencia(float base, float expoente){
    float result = 1;
    
    if (expoente < 0) { // Expoente negativo
        base = 1 / base; // Inverte a base
        expoente = -expoente; } // Expoente vira positivo;
    
    for (int i=0; i < expoente; i++) {
        result *= base; }

    return result; }

// Escolhas no Switch Case
int main() {
    int opcao;
        float n1, n2, s;
        char sinal;
        printf ("Olá usuario, vamos começar!\n\n");
        printf ("Menu de opções:");
        printf ("\n- (x + y) Adição");
        printf ("\n- (x - y) Subtração");
        printf ("\n- (x * y) Multiplicação");
        printf ("\n- (x / y) Divisão");
        printf ("\n- (x % y) Porcentagem");
        printf ("\n- (x ^ y) Potência");
        printf ("\n- ( x ! ) Fatorial");
        printf ("\n- ( c x°) Cosseno");
        printf ("\n- ( t x°) Tangente");
        printf ("\n- ( s ) Sair\n\n");
    
    do {
        //Lê o primeiro número apenas uma vez
        for (int j=0; j<1; j++) { 
            printf ("Digite o cálculo: ");
            scanf (" %f", &n1, j+1);
            printf ("\nContador: %d\n", j);
        }
        
        scanf (" %c %f", &sinal, &n2);
    
        

    switch (sinal) { // Verificador de sinal
        case '+':
            n1 = soma(n1, n2);
            printf ("Resultado: %.2f\n", n1);
            break;
        case '-':
            n1 = subtracao(n1, n2);
            printf ("Resultado: %.2f\n", n1);
            break;
        case '*':
        case 'x':
            n1 = multiplicacao(n1, n2);
            printf ("Resultado: %.2f\n", n1);
            break;
        case ':':
        case '/':
        case '\\':
            n1 = divisao(n1, n2);
            printf ("Resultado: %.2f\n", n1);
            break;
        case '^':
        case '~':
            n1 = potencia(n1, n2);
            printf ("Resultado: %.2f\n", n1);
            break;
        case '%':
            n1 = porcentagem(n1, n2);
            printf ("Resultado: %.2f%%\n", n1);
            break;
        case '!':
            n1 = fatoracao(n1);
            printf ("Resultado: %.2f\n", n1);
            break;
        // Programar ATENÇÃO
        case 'c':
            n1 = cosseno(n2);
            printf ("cos(%.0f°) Resultado: %.2f\n", n2, n1);
            break;
        // Programar ATENÇÃO
        case 't':
            n1 = tangente(n2);
            printf ("tan(%.0f°) Resultado: %.2f\n", n2, n1);
            break;
        case 's':
            printf ("Saindo do programa.\n");
            break;
        default:
            printf ("Opção inválida.\n");
            break;
    } // final do Case
    } while (sinal != s); // final do Loop
    return 0;
}
