        printf ("Desenvolvedores: Ithalo Daniel, Pedro H. Ribeiro, Yuna Vitória.\n\n");
        printf ("============+=+============\n");
        printf ("| Menu de opções:         |\n");
        printf ("| - (x + y) Adição        |\n");
        printf ("| - (x - y) Subtração     |\n");
        printf ("| - (x * y) Multiplicação |\n");
        printf ("| - (x / y) Divisão       |\n");
        printf ("| - (x % y) Porcentagem   |\n");
        printf ("| - (x ^ y) Potência      |\n");
        printf ("| - ( x ! ) Fatorial      |\n");
        printf ("| - ( c ) Cosseno         |\n");
        printf ("| - ( t ) Tangente        |\n");
        printf ("| - ( i ) Iniciar         |\n");
        printf ("| - ( l ) Limpar          |\n");
        printf ("| - ( s ) Sair            |\n");
        printf ("============+=+============\n");
        printf ("\nIniciar ou Sair? ");
        scanf (" %s", &sinal);
        
    if (sinal == 'i') {// if1 Inicia apenas com i
        
    while (sinal != 's')  { // Roda o Loop se não for s
        printf ("\nVisor: %.0f", n1); 
        
        if (n1 == 0) { //Obtem o 1° Número
        printf ("\nCalculadora: ");
        scanf (" %f", &n1);
        };
        
        scanf (" %c", &sinal);
        
        // Verifica se não digitou s, c ou t
        if (sinal != 's' && sinal != 'c' && sinal != 't' && sinal != 'l') {
            scanf (" %f", &n2);
        } 
        
    if (sinal != 's') { //Roda o Switch se não for s
    switch (sinal) { // Verificador de sinal
        case '+':
            n1 = soma(n1, n2);
            break;
        case '-':
            n1 = subtracao(n1, n2);
            break;
        case '*':
        case 'x':
            n1 = multiplicacao(n1, n2);
            break;
        case ':':
        case '/':
        case '\\':
            n1 = divisao(n1, n2);
            break;
        case '^':
        case '~':
            n1 = potencia(n1, n2);
            break;
        case '%':
            n1 = porcentagem(n1, n2);
            break;
        case '!':
            n1 = fatoracao(n1);
            break;
        // Programar ATENÇÃO
        case 'c':
            printf ("\nLimpando Visor...");
            printf ("\nPreparando Cálculo Para Radianos...");
            printf ("\nInsira cos(x): ");
            scanf (" %f", &n1);
            n1 = cosseno(n1);
            break;
        // Programar ATENÇÃO
        case 't':
            n1 = tangente(n2);
            printf ("tan(%.0f°)", n2, n1);
            break;
        case 'l':
            printf ("\nLimpando Visor...");
            n1 = 0;
            break;
    } // final do Case
    } // final do if2
    } // final do while
    } // final do if1
    
    printf ("Saindo do programa.\n");
    return 0;
}
